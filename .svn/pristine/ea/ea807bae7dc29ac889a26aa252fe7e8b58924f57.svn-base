/* 수강신청 강의 상세정보 모달 */
#lectInfoModal{
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0px; 
    right: 0px;
    background-color: rgba(128, 128, 128, 0.5);
    z-index: 9999999999;
    display: none;
}

#lectModalDiv{
    width: 60%;
    height: 85%;
    margin: 90px auto;
    background-color: white;
} 
