<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.basket.dao.BasketDAO">

	<resultMap type="BasketVO" id="basketListMap" autoMapping="true">
		<id property="basketNo" column="BASKET_NO" />
		<association property="lecture" javaType="LectureVO" autoMapping="true">
			<id property="lectNo" column="LECT_NO"/>
			<collection property="lectDetailList" ofType="LectureTimePlaceVO" autoMapping="true" />
		</association>
	</resultMap>	
	<select id="selectBasketList" resultMap="basketListMap" parameterType="string">
		SELECT 
		    BASKET_NO
		    ,STU_NO
		    ,B.LECT_NO
		    ,BASKET_RDATE
		    
		    ,LV.LECT_NO
		    ,LV.SUB_NO
		    ,LV.PRO_NO
		    ,LV.LECT_NAME
		    ,LV.LECT_EXP
		    ,LV.LECT_MM
		    ,LV.LECT_PM
		    ,LV.LECT_ONF
		    ,LV.LECT_ONF_NAME
		    ,LV.LECT_STATE
		    ,LV.LECT_STATE_NAME
		    ,LV.AY_YEAR
		    ,LV.AY_SEMESTER
		    ,LV.MEM_NAME
		    ,LV.DEPT_NO
		    ,LV.COL_NO
		    ,LV.SUB_NAME
		    ,LV.SUB_EXP
		    ,LV.SUB_GRADE
		    ,LV.SUB_HOURS
		    ,LV.SUB_SCR
		    ,LV.SUB_STATE
		    ,LV.SUB_REASON
		    ,LV.SUB_COMM
		    ,LV.SUB_COMM_NAME
		    ,LV.COL_NAME
		    ,LV.DEPT_NAME
		    ,LV.LT_NO
		    ,LV.LTD_NO
		    ,LV.LTD_DAY
		    ,LV.LTD_PERIOD
		    ,LV.LR_NO    
			,LV.LR_NUM
			,LV.BUIL_NO
			,LV.BUIL_NAME	
			
		    , (
		        SELECT COUNT(*)
		        FROM BASKET B
		        WHERE B.LECT_NO = LV.LECT_NO 
		    ) BASKET_NUM
		 
		FROM BASKET B LEFT OUTER JOIN LECTURE_VIEW LV
		    ON (B.LECT_NO = LV.LECT_NO)
		WHERE STU_NO=#{stuNo}
		
		ORDER BY BASKET_RDATE DESC, LTD_NO ASC
	</select>
	
	<select id="selectBasket" resultType="BasketVO" parameterType="BasketVO">
		SELECT 
		    BASKET_NO
		    ,STU_NO
		    ,LECT_NO
		    ,BASKET_RDATE
		FROM BASKET
		WHERE LECT_NO=#{lectNo} AND STU_NO=#{stuNo} 
	</select>
	
	<insert id="insertBasket" parameterType="BasketVO">
		INSERT INTO BASKET (
		    BASKET_NO
		    ,STU_NO
		    ,LECT_NO
		    ,BASKET_RDATE
		) VALUES (
			BASKET_SEQ.NEXTVAL
			, #{stuNo,jdbcType=VARCHAR}
			, #{lectNo,jdbcType=VARCHAR}
			, SYSTIMESTAMP
		)
	</insert>
	
	<delete id="deleteBasket" parameterType="string">
		DELETE FROM BASKET
	    WHERE BASKET_NO=#{basketNo}
	</delete>
	
	<select id="selectBasketByPk" resultType="BasketVO" parameterType="string">
		SELECT 
		    BASKET_NO
		    ,STU_NO
		    ,LECT_NO
		    ,BASKET_RDATE
		FROM BASKET
		WHERE BASKET_NO=#{basketNo}
	</select>
	
</mapper>


