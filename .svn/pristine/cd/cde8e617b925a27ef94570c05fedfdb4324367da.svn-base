@charset "UTF-8";

html, body {
	margin: 0;
	padding: 0;
	font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
	font-size: 14px;
}

.calendarInsertModal {
	position: fixed;
	width: 100%;
	/* fixed일 때는 height:100% 동작 */
	height: 100%;
	left: 0px;
	top: 0px;
	background-color: rgba(0, 0, 0, 0.274);
	/* 무조건 크겡! */
	z-index: 315;
	display: none;
}

.calendarInsertModalCont {
	width: 400px;
	height: 400px;
	/* 수평 가운데 정렬 */
	margin-top: 15%;
	margin-left: 38%;
	padding-left: 20px;
	border-radius: 5%;
	background-color: rgb(255, 255, 255);
	color: rgb(9, 9, 8);
}

.calendarDetailModal {
	position: fixed;
	width: 100%;
	/* fixed일 때는 height:100% 동작 */
	height: 100%;
	left: 0px;
	top: 0px;
	background-color: rgba(0, 0, 0, 0.274);
	/* 무조건 크겡! */
	z-index: 315;
	display: none;
}

.modalCont {
	width: 400px;
	height: 400px;
	/* 수평 가운데 정렬 */
	margin-top: 15%;
	margin-left: 38%;
	padding-left: 20px;
	border-radius: 5%;
	background-color: rgb(255, 255, 255);
	color: rgb(9, 9, 8);
}

.calendarDetailModalCont {
	width: 500px;
	height: 400px;
	/* 수평 가운데 정렬 */
	margin-top: 15%;
	margin-left: 38%;
	padding-left: 20px;
	border-radius: 5%;
	background-color: rgb(255, 255, 255);
	color: rgb(9, 9, 8);
}



.calendarModalInput {
	width: 300px;
	height: 40px;
	font-size: 15px;
	margin: 10px auto;
	outline: none;
	padding-left: 10px;
}

/* IE */
select::-ms-expand {
	display: none;
}

.select {
	width: 150px;
	height: 35px;
	background:
		url('https://freepikpsd.com/media/2019/10/down-arrow-icon-png-7-Transparent-Images.png')
		calc(100% - 5px) center no-repeat;
	background-size: 20px;
	padding: 5px 30px 5px 10px;
	border-radius: 4px;
	outline: 0 none;
}

.select option {
	background: black;
	color: #fff;
	padding: 3px 0;
}